{
  "openapi": "3.0.1",
  "info": {
    "title": "MOOST Public API",
    "description": "Moost Recommender Platform Open-API specification for Public API's",
    "contact": {
      "url": "https://www.moost.io/contact"
    },
    "version": "latest"
  },
  "servers": [
    {
      "url": "https://api.moost.io"
    }
  ],
  "paths": {
    "/v1": {
      "post": {
        "tags": [
          "user-controller"
        ],
        "operationId": "loginV1",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "GrantedAuthority": {
        "type": "object",
        "properties": {
          "authority": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "accountNonExpired": {
            "type": "boolean"
          },
          "accountNonLocked": {
            "type": "boolean"
          },
          "credentialsNonExpired": {
            "type": "boolean"
          },
          "authorities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GrantedAuthority"
            }
          }
        }
      },
      "AccessTokenResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "pattern": "^[a-zA-Z0-9_]{1,100}$",
            "type": "string"
          },
          "expires_in": {
            "type": "integer",
            "format": "int32"
          },
          "scope": {
            "type": "string"
          },
          "token_type": {
            "type": "string",
            "enum": [
              "Bearer",
              "mac"
            ]
          }
        }
      }
    }
  }
}